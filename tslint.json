{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "eofline": false,
        "no-console": false,
        "no-trailing-whitespace": false,
        "ordered-imports": false,
        "quotemark": {
            "options": [
                "single",
                "jsx-single",
                "avoid-escape"
            ]
        },
        "semicolon":  {
            "options": ["always"]
        },
        "space-before-function-paren": {
            "options":  {
                "anonymous": "always",
                "asyncArrow": "always",
                "method": "always",
                "named": "always"
            }
        },
        "trailing-comma": false
    },
    "rules": {
        "array-type": false,
        "eofline": false,
        "no-console": false,
        "no-trailing-whitespace": false,
        "ordered-imports": false,
        "quotemark": {
            "options": [
                "single",
                "jsx-single",
                "avoid-escape"
            ]
        },
        "semicolon": {
            "options": [
                "never"
            ]
        },
        "space-before-function-paren": {
            "options": {
                "anonymous": "always",
                "asyncArrow": "always",
                "method": "always",
                "named": "always"
            }
        },
        "trailing-comma": false,
        "typedef": true
    },
    "rulesDirectory": []
}